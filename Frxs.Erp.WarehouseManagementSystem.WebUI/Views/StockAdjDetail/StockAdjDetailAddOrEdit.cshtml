@{
    ViewBag.Title = "盘盈单";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<form id="formAdd">
    <fieldset style="margin: 0px 0px 5px 0px; border: 1px solid #95B8E7">
        <legend style="color: #416AB7; font-weight: bold">基本信息</legend>
        <table id="tab" class="xstable" border="0">
            <tr>
                <td>商品编码：</td>
                <th style="text-align: left;">
                    <input type="hidden" name="ID" id="ID" value="">
                    <input type="hidden" name="AdjID" id="AdjID" value="">
                    <input type="hidden" name="VendorID" id="VendorID" value="">
                    <input type="hidden" name="VendorCode" id="VendorCode" value="">
                    <input type="hidden" name="VendorName" id="VendorName" value="">
                    <input type="text" name="SKU" id="SKU" style="width: 160px" onkeypress="EnterPress(event)">
                    <input type="button" name="btnSelectProduct" id="btnSelectProduct" value="..." onclick="selectProduct()" />
                </th>
                <td>国际条码：</td>
                <th>
                    <input type="text" name="BarCode" id="BarCode" style="width: 200px" readonly="readonly" class="readonly">
                </th>
            </tr>
            <tr>
                <td>商品名称：</td>
                <th style="text-align: left;" colspan="3">
                    <input type="hidden" id="ProductId" name="ProductId" />
                    <input type="text" name="ProductName" id="ProductName" style="width: 490px" readonly="readonly" class="readonly">
                </th>
            </tr>
            <tr>
                <td>单位：</td>
                <th style="text-align: left;">
                    <input type="text" name="AdjUnit" id="AdjUnit" style="width: 200px" readonly="readonly" class="readonly">
                </th>
                <td>包装数：</td>
                <th>
                    <input type="text" name="AdjPackingQty" id="AdjPackingQty" style="width: 200px" readonly="readonly" class="readonly" value="1">
                </th>
            </tr>
            <tr>
                <td>数量：</td>
                <th style="text-align: left;">
                    <input type="text" name="AdjQty" id="AdjQty" style="width: 200px" class="easyui-numberbox" data-options="min:0,max:99999999.99,precision:2,required:true">
                </th>
                <td>采购单价：</td>
                <th>
                    <input type="text" name="BuyPrice" id="BuyPrice" style="width: 200px" readonly="readonly" class="readonly">
                </th>
            </tr>
            <tr>
                <td>总数量：</td>
                <th style="text-align: left;">
                    <input type="text" name="UnitQty" id="UnitQty" style="width: 200px" readonly="readonly" class="readonly">
                </th>
                <td>金额：</td>
                <th>
                    <input type="text" name="AdjAmt" id="AdjAmt" style="width: 200px" readonly="readonly" class="readonly">
                </th>
            </tr>
            <tr>
                <td>库存：</td>
                <th style="text-align: left;">
                    <input type="text" name="StockQty" id="StockQty" style="width: 200px" readonly="readonly" class="readonly">
                </th>
                <td>配送单价：</td>
                <th>
                    <input type="text" name="SalePrice" id="SalePrice" style="width: 200px" readonly="readonly" class="readonly">
                </th>
            </tr>
            <tr>
                <td>备注：</td>
                <th style="text-align: left;" colspan="3">
                    <input type="text" name="Remark" id="Remark" style="width: 490px">
                </th>
            </tr>
            <tr>
                <td>基本分类：</td>
                <th style="text-align: left;" colspan="3">
                    <input type="hidden" name="CategoryId1" id="CategoryId1" value="">
                    <input type="hidden" name="CategoryId2" id="CategoryId2" value="">
                    <input type="hidden" name="CategoryId3" id="CategoryId3" value="">
                    @*<input type="hidden" name="CategoryId1Name" id="CategoryId1Name" value="">
                    <input type="hidden" name="CategoryId2Name" id="CategoryId2Name" value="">
                    <input type="hidden" name="CategoryId3Name" id="CategoryId3Name" value="">*@
                    <input type="text" name="CategoryId1Name" id="CategoryId1Name" style="width: 120px" readonly="readonly" class="readonly"> >> <input type="text" name="CategoryId2Name" id="CategoryId2Name" style="width: 120px" readonly="readonly" class="readonly"> >> <input type="text" name="CategoryId3Name" id="CategoryId3Name" style="width: 120px" readonly="readonly" class="readonly">
                </th>
            </tr>
        </table>
    </fieldset>
</form>
@section scripts
{
    <script src="@Url.Content("~/Scripts/bussiness/stockCheck/StockAdjDetailAddOrEdit.js")" type="text/javascript"></script>
}