@{
    ViewBag.Title = "OrderSelect";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<form id="searchform">
    <fieldset style="margin: 0px 0px 5px 0px; border: 1px solid #95B8E7">
        <legend style="color: #416AB7; font-weight: bold">信息查询</legend>
        <table id="tab" class="xstable">
            <tr>
                <td>订单编号：</td>
                <th>
                    <input type="text" name="OrderId" id="OrderId" style="width: 120px;"></th>
                <td>门店编号：</td>
                <th>
                    <input type="text" name="ShopCode" id="ShopCode" style="width: 120px;"></th>
                <td>门店名称：</td>
                <th>
                    <input type="text" name="ShopName" id="ShopName" style="width: 120px;"></th>
                <td>配送线路：</td>
                <th>
                    <select id="LineName" name="LineName" class="easyui-combobox" style="width: 120px;" data-options="panelHeight:'auto',editable:false  "></select></th>
            </tr>
            <tr>
                <td>下单时间：</td>
                <th colspan="3">
                    <input onfocus="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm'})" class="Wdate" name="OrderStartDate" id="OrderStartDate" style="width: 120px;" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;至&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input onfocus="WdatePicker({dateFmt:'yyyy-MM-dd HH:mm',minDate:'#F{$dp.$D(\'OrderStartDate\')}'})" class="Wdate" name="OrderEndDate" id="OrderEndDate" style="width: 120px;">
                </th>
                <th>预计配送日期：</th>
                <td style="text-align: left" colspan="3">
                    <input onfocus="WdatePicker({dateFmt:'yyyy-M-d'})" class="Wdate" name="SendStartDate" id="SendStartDate" style="width: 120px;" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;至&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input onfocus="WdatePicker({dateFmt:'yyyy-M-d',minDate:'#F{$dp.$D(\'SendStartDate\')}'})" class="Wdate" name="SendEndDate" id="SendEndDate" style="width: 120px;"></td>
                <th>
                    <input type="button" onclick="search()" class="aSearch" value="查询"><input type="button" class="reset" value="重置" onclick="    resetSearch()"></th>
            </tr>
        </table>
    </fieldset>
</form>
<div id="grid"></div>

@section scripts
{
    <script src="@Url.Content("~/Scripts/bussiness/batchRecommend/batchRecommendOrderList.js")" type="text/javascript"></script>
}

