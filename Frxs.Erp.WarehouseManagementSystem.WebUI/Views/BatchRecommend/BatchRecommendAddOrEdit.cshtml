@{
    ViewBag.Title = "BatchRecommendAddOrEdit";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<fieldset style="margin: 0px 0px 2px 0px; border: 1px solid #95B8E7">
    <legend style="color: #416AB7; font-weight: bold">操作按钮</legend>
    @if (Authorize(520313, 52031301))
    {
        <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-add" id="addBtn" onclick="add()">添加</a>
    }
    @if (Authorize(520313, 52031302))
    {
        <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-edit" id="btnEdit" onclick="edit()">编辑</a>
    }
    @if (Authorize(520313, 52031304))
    {
        <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-ok" id="btnSure" onclick="sure()">确认</a>
    }
    @if (Authorize(520313, 52031306))
    {
        <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-upf" id="noSureBtn" onclick="noSure()">反确认</a>
    }
    @if (Authorize(520313, 52031305))
    {
        <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-cut" id="btnPost" onclick="posting()">过账</a>
    }
    @if (Authorize(520313, 52031301) || Authorize(520313, 52031302))
    {
        <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-save" id="btnSave" onclick="saveData()">保存</a>
    }
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-no" id="btnClose" onclick="frxs.tabClose()">关闭</a>
</fieldset>
<form id="OrderForm">
    <fieldset style="margin: 0px 0px 5px 0px; border: 1px solid #95B8E7">
        <legend style="color: #416AB7; font-weight: bold">基本信息</legend>
        <table id="tab" class="xstable" border="0">
            <tr>
                <td>单号：</td>
                <th>
                    <input type="text" name="EditID" id="EditID" readonly="readonly" class="readonly" style="width: 175px"></th>
                <td>改单时间：</td>
                <th>
                    <input onclick="WdatePicker({ dateFmt: 'yyyy-MM-dd HH:mm' })" class="Wdate easyui-validatebox" name="EditDate" id="EditDate" required="true" style="width: 175px" /></th>
                <td>仓库：</td>
                <th>
                    <select id="SubWID" name="SubWID" class="easyui-combobox" style="width: 175px" panelheight="auto" editable="false"></select></th>
                <td>状态：</td>
                <th>
                    <select id="Status" name="Status" class="easyui-combobox readonly" editable="false" style="width: 175px" panelheight="auto" readonly="readonly">
                        <option value='0'>录单</option>
                        <option value='1'>确认</option>
                        <option value='2'>过账</option>
                    </select>
                </th>
            </tr>
            <tr>
                <td>录单人员：</td>
                <th>
                    <input type="text" name="CreateUserName" id="CreateUserName" readonly="readonly" class="readonly" style="width: 175px" />
                </th>
                <td>录单时间：
                </td>
                <th>
                    <input name="CreateTime" id="CreateTime" readonly="readonly" class="readonly" style="width: 175px" />
                </th>
                <td>备注：</td>
                <th colspan="3">
                    <input type="text" name="Remark" id="Remark" style="width: 433px"></th>
            </tr>
            <tr>
                <td>确认人员：</td>
                <th>
                    <input type="text" name="ConfUserName" id="ConfUserName" readonly="readonly" class="readonly" style="width: 175px"></th>
                <td>确认时间：</td>
                <th>
                    <input name="ConfTime" id="ConfTime" readonly="readonly" class="readonly" style="width: 175px" /></th>
                <td>过帐人员：</td>
                <th>
                    <input type="text" name="PostingUserName" id="PostingUserName" readonly="readonly" class="readonly" style="width: 175px" />
                </th>
                <td>过帐时间：
                </td>
                <th>
                    <input name="PostingTime" id="PostingTime" readonly="readonly" class="readonly" style="width: 175px" />
                </th>
            </tr>
        </table>
    </fieldset>
</form>
<div id="Div">
    <div class="easyui-tabs">
        <div title="商品">
            <div id="grid"></div>
        </div>
        <div title="订单">
            <div id="gridOrder"></div>
        </div>
    </div>
</div>
@section scripts
{
    <script src="@Url.Content("~/Scripts/bussiness/batchRecommend/batchRecommendAddOrEdit.js")" type="text/javascript"></script>
}
