@{
    Layout = null;
}


<!DOCTYPE html>
<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <title>芙蓉兴盛ERP管理系统</title>
        @Styles.Render("~/Content/css")
        <link id="themeeasy" href="~/Content/easyui-1.4.3/themes/default/easyui.css" rel="stylesheet" />
        <script type="text/javascript">
            var nowDate = '@DateTime.Now.ToString("yyyy/MM/dd HH:mm:ss")';
        </script>
    </head>
    <body class="easyui-layout" style="overflow-y: hidden"  scroll="no">
        <noscript>
            <div style=" position:absolute; width:98%; background:white; text-align:center;">
                <img src="~/Content/images/noscript.gif" alt='抱歉，请开启脚本支持！' />
            </div>
        </noscript>

        <div region="north" split="true" border="false" style="overflow: hidden; height: 30px; background: url('@Url.Content("~/Content/images/layout-hd-bg.gif")') #7f99be repeat-x center 50%; line-height: 20px;color: #fff; font-family: Verdana, 微软雅黑,黑体">
            <span style="float:right; padding-right:20px;padding-top:2px" class="head">
                <a href="javascript:loginOut()">安全退出</a>
            </span>
        
            <span id="bgclock" style="float:right;padding-right:10px; padding-top:2px" class="head"></span>

            <span style="padding-left:10px; font-size: 16px; "><img src="~/favicon.ico" width="18" height="18" align="absmiddle" /> 芙蓉兴盛ERP管理系统</span>
            <span style="float:right;padding-right:5px; padding-top:2px" class="head">@ViewBag.UserName &nbsp; &nbsp;@ViewBag.WarehouseName</span>
            <div style="float: right; margin-right: 15px;">
                <a href="javascript:void(0)" onclick="downloadApp()" style="margin-right: 15px;color: #fff">客户端程序下载</a>
                <a href="javascript:void(0)" onclick="changeTheme('default')" style="width: 10px; height: 10px; background: #FFE48D; border: 1px solid #95B8E7; display: inline-block; margin-top: 6px;margin-right: 2px;"></a>
                <a href="javascript:void(0)" onclick="changeTheme('bootstrap')" style="width: 10px; height: 10px; background: #0081C2; border: 1px solid #D4D4D4; display: inline-block; margin-top: 6px;margin-right: 2px;"></a>
                <a href="javascript:void(0)" onclick="changeTheme('grinder')" style="width: 10px; height: 10px; background: #B83400; border: 1px solid #DDDDDD; display: inline-block; margin-top: 6px;margin-right: 2px;"></a>
                <a href="javascript:void(0)" onclick="changeTheme('sunny')" style="width: 10px; height: 10px; background: #817865; border: 1px solid #DDDDDD; display: inline-block; margin-top: 6px;margin-right: 2px;"></a>
                <a href="javascript:void(0)" onclick="changeTheme('gray')" style="width: 10px; height: 10px; background: #0092DC; border: 1px solid #95B8E7; display: inline-block; margin-top: 6px;margin-right: 2px;"></a>
                <a href="javascript:void(0)" onclick="changeTheme('metro')" style="width: 10px; height: 10px; background: #CCE6FF; border: 1px solid #DDDDDD; display: inline-block; margin-top: 6px;margin-right: 2px;"></a>
                <a href="javascript:void(0)" onclick="changeTheme('cupertino')" style="width: 10px; height: 10px; background: #AED0EA; border: 1px solid #DDDDDD; display: inline-block; margin-top: 6px;margin-right: 2px;"></a>
            </div>
        </div>

        <div region="south" split="true" style="height: 30px; background: #D2E0F2;">
            <div class="footer">版权所有&copy;  兴盛社区网络服务股份有限公司 </div>
        </div>

        <div region="west" hide="true" split="true" title="导航菜单" style="width:206px;" id="west">
            <div id="nav" class="easyui-accordion" fit="true" border="false">
                <!--  导航内容 -->
            </div>
        </div>

        <!--标签页-->
        <div id="mainPanle" region="center" style="background: #eee; overflow-y:hidden">
            <div id="tabs" class="easyui-tabs"  fit="true" border="false" >
            </div>
        </div>

        <div id="mm" class="easyui-menu" style="width:150px; display:none">
            <div id="mm-tabupdate">刷新</div>
            <div class="menu-sep"></div>
            <div id="mm-tabclose">关闭</div>
            <div id="mm-tabcloseother">关闭其他</div>
            <div id="mm-tabcloseall">全部关闭</div>
            <div id="mm-tabcloseleft" style="display: none;">关闭左侧</div>
            <div id="mm-tabcloseright" style="display: none;">关闭右侧</div>
        </div>
        <!--APP下载-->
        <div style="display: none" id="appHtml">
            <table style='text-align: center; width: 700px; font-weight: bold;text-decoration: underline;'>
                <tr>
                    <td>
                        <img src="~/Content/images/apkpick.png" />
                    </td>
                    <td>
                        <img src="~/Content/images/apkcheck.png" />
                    </td>
                    <td>
                        <img src="~/Content/images/apkdelivery.png" />
                    </td>
                </tr>
                <tr>
                    <td><a href="~/frxs_pick_1.0.x.apk" target="_blank">拣货APP下载</a></td>
                    <td><a href="~/frxs_check_1.0.x.apk" target="_blank">装箱APP下载</a></td>
                    <td><a href="~/frxs_delivery_1.0.x.apk" target="_blank">配送APP下载</a></td>
                </tr>
                <tr>
                    <td style="padding-top:15px "><a href="~/PrintClientV1.rar" title="客户端打印V1.0 下载" target="_blank"><img src="~/Content/images/printclient.png" style="width: 197px; height: 197px" /></a></td>
                    <td></td>
                    <td></td>
                </tr>
                <tr>
                    <td><a href="~/PrintClientV1.rar" target="_blank">客户端打印V1.0 下载</a></td>
                    <td></td>
                    <td></td>
                </tr>
            </table>
        </div>
        @Scripts.Render("~/Content/easyui")
        <script src="@Url.Content("~/Content/js/base.js")" type="text/javascript"></script>
    </body>
</html>
