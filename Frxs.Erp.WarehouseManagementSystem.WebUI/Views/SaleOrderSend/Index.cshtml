@section scripts
{
    <script type="text/javascript">
        var authRefresh = true;
        var authUp = "@Authorize(520316, 52031601)".toLocaleLowerCase() == "true" ? true : false;//上移
        var authDown = "@Authorize(520316, 52031602)".toLocaleLowerCase() == "true" ? true : false;//下移
        var authTop = "@Authorize(520316, 52031603)".toLocaleLowerCase() == "true" ? true : false;//置顶
        var vartoolbar1 = [];
        var vartoolbar2 = [];
        if (authRefresh) {
            vartoolbar1.push(
                {
                    id: 'btnReload',
                    text: '刷新',
                    iconCls: 'icon-reload',
                    handler: function () {
                        //实现刷新栏目中的数据
                        $("#gridLine").datagrid("reload");
                    }
                }
            );
            vartoolbar2.push(
                {
                    id: 'btnReload',
                    text: '刷新',
                    iconCls: 'icon-reload',
                    handler: function () {
                        //实现刷新栏目中的数据
                        $("#gridShop").datagrid("reload");
                    }
                }
            );
        }
    </script>
    <script src="@Url.Content("~/Scripts/bussiness/saleOrderSend/saleOrderSendList.js")" type="text/javascript"></script>
}