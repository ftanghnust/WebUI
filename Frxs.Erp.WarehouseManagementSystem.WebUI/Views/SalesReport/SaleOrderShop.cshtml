@{
    ViewBag.Title = "芙蓉兴盛ERP管理系统";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<form id="myForm">
<fieldset style="margin: 0px 0px 5px 0px; border: 1px solid #95B8E7">
    <legend style="color: #416AB7; font-weight: bold">报表查询</legend>
    <table id="tab" class="xstable" border="0">
        <tr>
            <td>开始时间：</td>
            <th>
                <input onclick="WdatePicker({ dateFmt: 'yyyy-MM-dd HH:mm', maxDate: '#F{$dp.$D(\'S2\')}' })" name="S1" id="S1" class="Wdate easyui-validatebox" required="true" />
            </th>
            <td>结束时间：</td>
            <th>
                <input onclick="WdatePicker({ dateFmt: 'yyyy-MM-dd HH:mm', minDate: '#F{$dp.$D(\'S1\')}' })" name="S2" id="S2" class="Wdate easyui-validatebox" required="true" />
            </th>
            <td>仓库：</td>
            <th>
                <select id="SubWID" name="SubWID" class="easyui-combobox" style="width: 180px" panelheight="auto" editable="false"></select></th>
        </tr>
        <tr>
            <td>门店编码起：</td>
            <th><input type="text" id="S4"/></th>
            <td>门店编码止：</td>
            <th><input type="text" id="S5"/></th>
            <td>线路：</td>
            <th>
                <select id="S6" class="easyui-combobox" style="width: 180px"  editable="false"></select>
            </th>
        </tr>
        <tr>
                <td>过账日：</td>
                <th>
                    <input onclick="WdatePicker({ dateFmt: 'yyyy-MM-dd', maxDate: '#F{$dp.$D(\'S11\')}' })" name="S10" id="S10" class="Wdate" />
                </th>
                <td style="text-align: center">至</td>
                <th>
                    <input onclick="WdatePicker({ dateFmt: 'yyyy-MM-dd', minDate: '#F{$dp.$D(\'S10\')}' })" name="S11" id="S11" class="Wdate" />
                </th>
            </tr>
        <tr>
            <td>订货门店：</td>
            <th style="text-align: left;" colspan="4">
                <input type="hidden" name="ShopID" id="S3" />
                <input type="text" name="ShopCode" id="ShopCode" style="width: 100px;"> <input type="button" value="..." onclick="selShop()" />
                <input type="text" name="ShopName" id="ShopName" style="width: 242px" readonly="readonly" />
            </th>
            <td>
                <input type="button" id="aSearch" class="aSearch" onclick="search()" value="查询">
                <input type="button" onclick="resetSearch()" class="reset" value="重置">
            </td>
        </tr>
    </table>
</fieldset>
</form>
<div id="grid"></div>
@section scripts
{
    <script src="@Url.Content("~/Scripts/plugin/uploadify/FileSaver.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bussiness/report/saleordershop.js")" type="text/javascript"></script>
}