@{
    ViewBag.Title = "PriceSalesAddOrEdit";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}
<fieldset style="margin: 0px 0px 2px 0px; border: 1px solid #95B8E7">
    <legend style="color: #416AB7; font-weight: bold">操作按钮</legend>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-edit" id="editBtn" onclick="edit()">编辑</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-save" id="saveBtn" onclick="saveData()">保存</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-ok" id="sureBtn" onclick="sure()">确认</a>
    
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-cut" id="exportBtn" onclick="exportData()" >过账</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-upf" id="postBtn" onclick="posting()">反确认</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-daoru" id="exportBtn" onclick="exportData()" >导入</a>
    <a href="javascript:void(0)" class="easyui-linkbutton" iconcls="icon-daochu" id="exportBtn" onclick="exportData()" >导出</a>
    
</fieldset>
<form id="OrderForm">
    <fieldset style="margin: 0px 0px 5px 0px; border: 1px solid #95B8E7">
        <legend style="color: #416AB7; font-weight: bold">基本信息</legend>
        <table id="tab" class="xstable" border="0">
            <tr>
                <td>单号：</td>
                <th>
                    <input name="PostingTime" id="PostingTime" readonly="readonly" class="readonly" />
                </th>
                <td>仓库：</td>
                <th>
                    <select id="SubWID" name="SubWID" class="easyui-combobox" style="width: 175px" panelheight="auto" editable="false"></select>
                </th>
                <td>状态：</td>
                <th>
                    <select id="Status" name="Status" class="easyui-combobox readonly" editable="false" style="width: 140px" panelheight="auto" readonly="readonly" >
                        <option value='0'>录单</option>
                        <option value='1'>确认</option>
                        <option value='2'>过账</option>
                    </select>
                </th>
                <td>活动状态：</td>
                <th>
                    <select id="Status" name="Status" class="easyui-combobox readonly" editable="false" style="width: 140px" panelheight="auto" readonly="readonly" >
                        <option value='0'>录单</option>
                        <option value='1'>确认</option>
                        <option value='2'>过账</option>
                    </select>
                </th>
            </tr>
            <tr>
                <td>活动名称：</td>
                <th colspan="3">
                    <input type="text" name="VendorCode" style="width: 98%" id="VendorCode"  >
                </th>

                <td>开始时间：</td>
                <th>
                    <input onfocus="WdatePicker({dateFmt:'yyyy-M-d',minDate:'#F{$dp.$D(\'EndDate\')}'})" class="Wdate" name="StartDate" id="StartDate"/>
                </th>
                <td>
                    结束时间：
                </td>
                <th >
                    <input onfocus="WdatePicker({dateFmt:'yyyy-M-d',minDate:'#F{$dp.$D(\'StartDate\')}'})" class="Wdate" name="EndDate" id="EndDate"/>
                </th>
            </tr>
            <tr>
                <td>录单人员：</td>
                <th>
                    <input type="text" name="VendorCode" id="VendorCode" class="easyui-validatebox" required="true">
                </th>
                <td>录单时间：</td>
                <th>
                    <input name="PostingTime" id="PostingTime" readonly="readonly" class="readonly" />
                </th>
                <td>
                    备注：
                </td>
                <th colspan="3">
                    <input type="text" name="VendorCode" style="width: 98%" id="VendorCode" >
                </th>
                
            </tr>
            <tr>
                <td>
                    确认人员：
                </td>
                <th>
                    <input name="PostingTime" id="PostingTime" readonly="readonly" class="readonly" />
                </th>
                <td>确认时间：</td>
                <th>
                    <input type="text" name="ConfUserName" id="ConfUserName" style="width: 90%">
                </th>
                <td>
                    过帐人员：
                </td>
                <th>
                    <input name="PostingTime" id="PostingTime" readonly="readonly" class="readonly" />
                </th>
                <td>过帐时间：</td>
                <th>
                    <input type="text" name="ConfUserName" id="ConfUserName" style="width: 90%">
                </th>
            </tr>
        </table>
    </fieldset>
</form>
<div id="grid"></div>
@section scripts
{
    <script src="@Url.Content("~/Scripts/bussiness/product/priceSalesAddOrEdit.js")" type="text/javascript"></script>
}