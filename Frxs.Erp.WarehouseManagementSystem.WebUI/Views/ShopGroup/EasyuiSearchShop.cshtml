@{
    ViewBag.Title = "芙蓉兴盛ERP管理系统";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<fieldset style="margin:0px 0px 5px 0px; border: 1px solid #95B8E7">
    <legend style="color:#416AB7; font-weight:bold">信息查询</legend>
    <table id="tab" class="xstable">
        <tr>
            <td >门店编号：</td>
            <th><input type="text" name="ShopCode" id="ShopCode" style="width:100px"></th>
            <td >门店名称：</td>
            <th><input type="text" name="ShopName" id="ShopName"></th>
            <td >门店账号：</td>
            <th><input type="text" name="ShopAccount" id="ShopAccount"></th>
            </tr>
        <tr>
           
            <td>状态：</td>
            <th>
                <select name="Status" id="Status" class="easyui-combobox"  panelheight="auto" editable="false" style="width:100px">
                    <option value="">-请选择-</option>
                    <option value="1">正常</option>
                    <option value="0">冻结</option>
                </select>
            </th>
            <td >联系人：</td>
            <th><input type="text" name="LinkMan" id="LinkMan"></th>            
             <td >所属线路：</td>
            <th><select name="LineID" id="LineID" class="easyui-combobox"  panelheight="auto" editable="false" style="width:140px"></select></th>
            <td>
                <input type="button" id="aSearch" class="aSearch" onclick="search()" value="查询"><input type="reset"  onclick="resetSearch()" class="reset" value="重置"></td>
        </tr>    
    </table>
</fieldset>
<div id="grid"></div>
@section scripts
{
    <script src="@Url.Content("~/Scripts/bussiness/shopgroup/shop.js")" type="text/javascript"></script>
}