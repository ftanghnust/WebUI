@{
    ViewBag.Title = "芙蓉兴盛ERP管理系统";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}
<form id="searchform">
    <fieldset style="margin: 0px 0px 5px 0px; border: 1px solid #95B8E7">
        <legend style="color: #416AB7; font-weight: bold">信息查询</legend>
        <table id="tab" class="xstable">
            <tr>
                <td>开单日期：</td>
                <th colspan="3">
                    <input onfocus="WdatePicker({dateFmt:'yyyy-M-d',maxDate:'#F{$dp.$D(\'EndTime\')}'})" class="Wdate" name="BeginTime" id="BeginTime" style="width: 158px"/>至<input onfocus="WdatePicker({dateFmt:'yyyy-M-d',minDate:'#F{$dp.$D(\'BeginTime\')}'})" class="Wdate" name="EndTime" id="EndTime" style="width: 156px"/>
                </th>
                <td>盘点状态：</td>
                <th>
                    <select id="Status" name="Status" class="easyui-combobox" style="width: 160px" data-options="panelHeight:'auto',editable:false">
                        <option value="">全部</option>
                        <option value="0">未开始盘点</option>
                        <option value="1">盘点中</option>
                        <option value="2">盘点录入完成</option>
                        <option value="3">生成盈亏</option>
                        <option value="4">盘点中止</option>
                    </select>
                </th>
                <td>仓库：</td>
                <th>
                    <select id="SubWID" name="SubWID" class="easyui-combobox" style="width: 170px" data-options="panelHeight:'auto',editable:false"></select>
                </th>
                <th>
                    <input type="submit" id="aSearch" class="aSearch" value="查询">
                    <input type="button" id="aReset" class="reset" value="重置">
                </th>
            </tr>
            <tr>
                <td>盘点计划单号：</td>
                <th>
                    <input type="text" name="PlanID" id="PlanID" style="width: 156px">
                </th>
                <td>单据状态：</td>
                <th>
                    <select id="Status2" name="Status2" class="easyui-combobox" style="width: 160px" data-options="panelHeight:'auto',editable:false">
                        <option value="">全部</option>
                        <option value="0">录单</option>
                        <option value="1">确认</option>
                        <option value="2">已过账</option>
                    </select>
                </th>
            </tr>
        </table>
    </fieldset>
</form>
<div id="grid"></div>
@section scripts
{
    <script src="@Url.Content("~/Scripts/bussiness/stockCheck/stockCheckPlanList.js")" type="text/javascript"></script>
}