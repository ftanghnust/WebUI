<form id="formAdd">
    <fieldset style="margin: 0px 0px 2px 0px; border: 1px solid #999">
        <legend>信息管理</legend>
        <table id="tab" class="xstable">
            <tr>
                <td><i>*</i>消息类型：</td>
                <th style="width:230px">
                    <select id="MessageType" name="MessageType" class="easyui-combobox readonly" readonly="readonly" style="width: 145px"   data-options="panelHeight:'auto',editable:false" ></select>
                </th>
            
                <td><i>*</i>标题：</td>
                <th>
                    <input type="hidden" id="ID" name="ID" value="0" />
                    <input type="text" id="Title" name="Title"  readonly="readonly"  class="readonly"/></th>

            </tr>
            <tr>
                <td><i>*</i>消息内容：</td>
                <th colspan="3">
                    <textarea name="Message" id="Message" rows="20" cols="50"
                          class="readonly" readonly="readonly"  style="width: 675px; height: 99%" ></textarea></th>
            </tr>
            <tr>
                <td>时间段：</td>
                <th colspan="3">
                    <input name="BeginTime" id="BeginTime"  readonly="readonly"   class="readonly" />至 
                    <input name="EndTime" id="EndTime"  readonly="readonly"    class="readonly"/>
            </tr>
            <tr>

                <td >状态：
                </td>
                <th><input type="text" id="StatusStr" name="StatusStr" readonly="readonly"   class="readonly"  style="width: 60px;" />&nbsp;&nbsp;
                   是否置顶：<input type="text" id="IsFirstStr" name="IsFirstStr"  readonly="readonly"  class="readonly" style="width: 50px;" />
                  </th>
                <td>推广门面：</td>
                <th >
                <input type="radio" id="rangType1" name="RangType" value="0" checked="checked"   />全部门店 &nbsp;&nbsp;&nbsp;  
                <input type="radio" id="rangType3" name="RangType" value="1"   />指定门店分组 &nbsp;&nbsp;&nbsp;  
                </th>
            </tr>
            <tr >
                <td colspan="4" > 
