@{
    ViewBag.Title = "芙蓉兴盛ERP管理系统";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}
<form id="searchform">
    <fieldset style="margin: 0px 0px 5px 0px; border: 1px solid #95B8E7">
        <legend style="color: #416AB7; font-weight: bold">信息查询</legend>
        <table id="tab" class="xstable">
            <tr>
                <td>单号：</td>
                <th>
                    <input type="hidden" name="AdjType" id="AdjType" value="0">
                    <input type="text" name="AdjID" id="AdjID" style="width: 156px">
                </th>
                <td>商品名称：</td>
                <th >
                    <input type="text" name="ProductName" id="ProductName" style="width: 156px"/>
                </th>
                <td>商品编码：</td>
                <th>
                    <input type="text" name="SKU" id="SKU" style="width: 156px"/>
                </th>
            </tr>
            <tr>
                <td>单据状态：</td>
                <th>
                    <select id="Status" name="Status" class="easyui-combobox" style="width: 160px" data-options="panelHeight:'auto',editable:false">
                        <option value="">全部</option>
                        <option value="0">录单</option>
                        <option value="1">确认</option>
                        <option value="2">已过账</option>
                        @*<option value="3">已作废</option>*@
                    </select>
                </th>
                <td>开单日期：</td>
                <th colspan="3">
                    <input onfocus="WdatePicker({dateFmt:'yyyy-M-d',maxDate:'#F{$dp.$D(\'EndTime\')}'})" class="Wdate" name="BeginTime" id="BeginTime" style="width: 158px"/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;至&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<input onfocus="WdatePicker({dateFmt:'yyyy-M-d',minDate:'#F{$dp.$D(\'BeginTime\')}'})" class="Wdate" name="EndTime" id="EndTime" style="width: 156px"/>
                </th>
                <td>仓库：</td>
                <th>
                    <select id="SubWID" name="SubWID" class="easyui-combobox" style="width: 170px" data-options="panelHeight:'auto',editable:false"></select>
                </th>
                <th >
                    <input type="submit" id="aSearch" class="aSearch" value="查询">
                    <input type="button" id="aReset" class="reset" value="重置">
                </th>
            </tr>
        </table>
    </fieldset>
</form>
<div id="grid"></div>
@section scripts
{
    <script type="text/javascript">
        var authRefresh = true;
        var authAdd = "@Authorize(520716, 52071601)".toLocaleLowerCase() == "true" ? true : false;//添加
        var authEdit = "@Authorize(520716, 52071602)".toLocaleLowerCase() == "true" ? true : false;//编辑
        var authDel = "@Authorize(520716, 52071603)".toLocaleLowerCase() == "true" ? true : false;//移除
        var authSure = "@Authorize(520716, 52071604)".toLocaleLowerCase() == "true" ? true : false;//确认
        var authPosting = "@Authorize(520716, 52071605)".toLocaleLowerCase() == "true" ? true : false;//过账
        var authUnsure = "@Authorize(520716, 52071606)".toLocaleLowerCase() == "true" ? true : false;//反确认
        var authExport = "@Authorize(520716, 52071607)".toLocaleLowerCase() == "true" ? true : false;//导出
        var authAddStockLess = "@Authorize(520717, 52071701)".toLocaleLowerCase() == "true" ? true : false;//添加盘亏单的权限！
        var vartoolbar = [];
        if (authRefresh) {
            vartoolbar.push(
                {
                    id: 'btnReload',
                    text: '刷新',
                    iconCls: 'icon-reload',
                    handler: function () {
                        //实现刷新栏目中的数据
                        $("#grid").datagrid("reload");
                    }
                }
            );
        }
        if (authAdd) {
            vartoolbar.push(
                {
                    id: 'btnAdd',
                    text: '添加',
                    iconCls: 'icon-add',
                    handler: function () {
                        add();
                    }
                }
            );
        }
        if (authDel) {
            vartoolbar.push(
                {
                    id: 'btnDel',
                    text: '删除',
                    iconCls: 'icon-remove',
                    handler: function () {
                        delCheck();
                    }
                }
            );
        }
        if (authEdit) {
            vartoolbar.push(
                {
                    id: 'btnView',
                    text: '查看',
                    iconCls: 'icon-search',
                    handler: function () {
                        viewCheck();
                    }
                }
            );
        }
        if (authSure) {
            vartoolbar.push(
                {
                    id: 'btnSure',
                    text: '确认',
                    iconCls: 'icon-ok',
                    handler: function () {
                        confirmCheck();
                    }
                }
            );
        }
        if (authUnsure) {
            vartoolbar.push(
                {
                    id: 'btnUnsure',
                    text: '反确认',
                    iconCls: 'icon-upf',
                    handler: function () {
                        unconfirmCheck();
                    }
                }
            );
        }
        if (authPosting) {
            vartoolbar.push(
                {
                    id: 'btnPost',
                    text: '过账',
                    iconCls: 'icon-cut',
                    handler: function () {
                        postingCheck();
                    }
                }
            );
        }
        if (authAddStockLess) {
            vartoolbar.push(
                {
                    id: 'btnAddStockLess',
                    text: '生成盘亏单',
                    iconCls: 'icon-upf',
                    handler: function () {
                        addStockLess();
                    }
                }
            );
        }
    </script>
    <script src="@Url.Content("~/Scripts/bussiness/stockCheck/stockCheckOverList.js")" type="text/javascript"></script>
}