<div id="grid"></div>
@section scripts
{
    <script type="text/javascript">
        var authRefresh = true;
        var authAdd = "@Authorize(520411, 52041101)".toLocaleLowerCase() == "true" ? true : false;//添加
        var authEdit = "@Authorize(520411, 52041102)".toLocaleLowerCase() == "true" ? true : false;//编辑
        var authDel = "@Authorize(520411, 52041103)".toLocaleLowerCase() == "true" ? true : false;//移除
        var vartoolbar = [];
        if (authRefresh) {
            vartoolbar.push(
                {
                    id: 'btnReload',
                    text: '刷新',
                    iconCls: 'icon-reload',
                    handler: function () {
                        //实现刷新栏目中的数据
                        $("#grid").datagrid("reload");
                    }
                }
            );
        }
        if (authAdd) {
            vartoolbar.push(
                {
                    id: 'btnAdd',
                    text: '添加',
                    iconCls: 'icon-add',
                    handler: function () {
                        add();
                    }
                }
            );
        }
        if (authDel) {
            vartoolbar.push(
                {
                    id: 'btnDel',
                    text: '删除',
                    iconCls: 'icon-remove',
                    handler: function () {
                        delCheck();
                    }
                }
            );
        }
    </script>
    <script src="@Url.Content("~/Scripts/bussiness/wAdvertisement/wAdvertisementList.js")" type="text/javascript"></script>
}