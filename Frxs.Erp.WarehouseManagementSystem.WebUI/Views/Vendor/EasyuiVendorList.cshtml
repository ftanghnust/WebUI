@{
    ViewBag.Title = "芙蓉兴盛ERP管理系统";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}
<fieldset style="margin: 0px 0px 5px 0px; border: 1px solid #95B8E7">
    <legend style="color: #416AB7; font-weight: bold">信息查询</legend>
    <table id="tab" class="xstable">
        <tr>
            <td>编号：</td>
            <th>
                <input type="text" id="VendorCode" name="VendorCode"></th>
            <td>名称：</td>
            <th>
                <input type="text" id="VendorName" name="VendorName"></th>
            <td>类型：</td>
            <th>
                <select name="VendorTypeID" id="VendorTypeID" class="easyui-combobox" data-options="panelHeight:'auto',editable:false,width:120"></select>
            </th>
             <td>账期：</td>
            <th>
                <select name="PaymentDateType" id="PaymentDateType" class="easyui-combobox" data-options="panelHeight:'auto',editable:false,width:120"></select>
            </th>
            
        </tr>
        <tr>
            <td>联系人：</td>
            <th>
                <input type="text" name="LinkMan" id="LinkMan"></th>
            <th>结算方式：</th>
            <td>
                <select name="SettleTimeType" id="SettleTimeType" class="easyui-combobox" style="width: 142px" data-options="panelHeight:'auto',editable:false"></select>
            <td>状态：</td>
            <th>
                <select name="Status" id="Status" class="easyui-combobox" style="width: 120px; color: gray" data-options="panelHeight:'auto',editable:false">
                    <option value="">-请选择-</option>
                    <option value="1">正常</option>
                    <option value="0">冻结</option>
                </select>
            </th>
            <td colspan="2">
                <input type="button" id="aSearch" class="aSearch" value="查询"><input id="aReset" type="reset" class="reset" value="重置"></td>
        </tr>
    </table>
</fieldset>
<div id="grid"></div>
@section scripts
{
    <script src="@Url.Content("~/Scripts/bussiness/vendor/vendor.js")" type="text/javascript"></script>
}