@{
    ViewBag.Title = "芙蓉兴盛ERP管理系统";
    Layout = "~/Views/Shared/_LayoutNew.cshtml";
}

<form id="myForm">
<fieldset style="margin: 0px 0px 5px 0px; border: 1px solid #95B8E7">
    <legend style="color: #416AB7; font-weight: bold">同步销售单据查询</legend>
    <table id="tab" class="xstable" border="0">       
        <tr>
            <td>开始时间：</td>
            <th>
                <input onclick="WdatePicker({ dateFmt: 'yyyy-MM-dd', maxDate: '#F{$dp.$D(\'EndTime\')}' })" name="SarteTime" id="SarteTime" class="Wdate" />
            </th>
            <td>截止时间：</td>
            <th>
                <input onclick="WdatePicker({ dateFmt: 'yyyy-MM-dd', minDate: '#F{$dp.$D(\'SarteTime\')}' })" name="EndTime" id="EndTime" class="Wdate" />
            </th>
            <td>单据类型：
            </td>
            <th>
                <select name="Status" id="Status" class="easyui-combobox"  panelheight="auto" editable="false" style="width:140px">                    
                    <option value="0">销售出库</option>
                    <option value="1">销售退库</option>
                </select>
            </th>
             <th colspan="2">
                <input type="button" id="aSearch" class="aSearch" onclick="search()" value="查询">
                <input type="button" onclick="resetSearch()" class="reset" value="重置">
                 @if (Authorize(522001, 52200105))
                 { 
                  <input type="button" onclick="syncbutton()" class="reset" value="执行同步">
                 }
            </th>
        </tr>
       
    </table>
</fieldset>
</form>
<div id="grid"></div>
@section scripts
{
    <script src="@Url.Content("~/Scripts/plugin/uploadify/FileSaver.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/bussiness/report/syncsale.js")" type="text/javascript"></script>
}
